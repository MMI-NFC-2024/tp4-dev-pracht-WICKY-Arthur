---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
---

<Layout>
  <Menu />
  <h1 class="pl-12 pb-8 text-3xl">Diamants filtre</h1>
  <select class="ml-12 mb-8" name="color" id="color">
    <option value="">All colors</option>
    <option value="G">G</option>
    <option value="E">E</option>
    <option value="F">F</option>
    <option value="H">H</option>
    <option value="D">D</option>
    <option value="I">I</option>
    <option value="J">J</option>
  </select>
  <select class="ml-12 mb-8" name="cut" id="cut">
    <option value="">All cut</option>
    <option value="Ideal">Ideal</option>
    <option value="Premium">Premium</option>
    <option value="Very Good">Very Good</option>
    <option value="Good">Good</option>
    <option value="Fair">Fair</option>
  </select>
  <select class="ml-12 mb-8" name="clarity" id="clarity">
    <option value="">All clarity</option>
    <option value="SI1">SI1</option>
    <option value="VS2">VS2</option>
    <option value="SI2">SI2</option>
    <option value="VS1">VS1</option>
    <option value="VVS2">VVS2</option>
    <option value="VVS1">VVS1</option>
    <option value="IF">IF</option>
    <option value="I1">I1</option>
  </select>
  <div id="myplot" class="ml-8"></div>

  <script>
    // Importe la librairie Plot d'ObservableHQ
    import * as Plot from "@observablehq/plot";
    // Importe les données des manchots depuis un fichier JSON
    import diamonds from "../assets/diamonds.json";

    // Récupère l'élément select pour choisir l'espèce
    const selectColor = document.getElementById("color");
    const selectCut = document.getElementById("cut");
    const selectClarity = document.getElementById("clarity");
    // Fonction pour afficher le graphique
    function renderPlot() {
      // Récupère l'espèce sélectionnée
      const color = selectColor.value;
      const cut = selectCut.value;
      const clarity = selectClarity.value;

      // Sélectionne la div où le graphique sera affiché
      const plotDiv = document.getElementById("myplot");
      // Vide le contenu précédent de la div
      plotDiv.innerHTML = "";
      let filteredData = diamonds;

      if (color) {
        filteredData = filteredData.filter((d) => d.color === color);
      }

      if (cut) {
        filteredData = filteredData.filter((d) => d.cut === cut);
      }

      if (clarity) {
        filteredData = filteredData.filter((d) => d.clarity === clarity);
      }
      // Crée le graphique avec Plot
      const plot = Plot.plot({
        marks: [
          // Ajoute les points du graphique, filtrés selon l'espèce choisie
          Plot.dot(filteredData, {
            x: "price",
            y: "carat",
            stroke: "color",
          }),
        ],
      });
      // Ajoute le graphique à la div

      plotDiv.appendChild(plot);
    }
    // Ajoute un écouteur d'événement pour le changement d'espèce (appel 'renderPlot')
    selectColor.addEventListener("change", renderPlot);
    selectCut.addEventListener("change", renderPlot);
    selectClarity.addEventListener("change", renderPlot);
    // Affiche le graphique au chargement de la page
    renderPlot();
  </script>
</Layout>
